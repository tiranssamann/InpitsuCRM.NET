@model Inpitsu.Web.ViewModels.TaskFormModel

@{
    ViewBag.Title = "Edit Task";
}

<link href="~/taskswroot/css/style.css" rel="stylesheet" type="text/css" />

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Edit">
